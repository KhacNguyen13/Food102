@model IEnumerable<Food.Models.BProduct>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";  // Dùng layout của bạn
}
<!-- Modal Search Start -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content rounded-0">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Search by keyword</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex align-items-center">
                <div class="input-group w-75 mx-auto d-flex">
                    <input type="search" class="form-control bg-transparent p-3" placeholder="keywords" aria-describedby="search-icon-1">
                    <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Search End -->
<!-- Hero Start -->
<div class="container-fluid bg-light py-6 my-6 mt-0">
    <div class="container text-center animated bounceInDown">
        <h1 class="display-1 mb-4">Thực đơn</h1>
        <ol class="breadcrumb justify-content-center mb-0 animated bounceInDown">
            <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
            <li class="breadcrumb-item text-dark" aria-current="page">Thực đơn</li>
        </ol>
    </div>
</div>
<!-- Hero End -->
<!-- Menu Start -->
<div class="container-fluid menu bg-light py-6 my-6">
    <div class="container">
        <div class="text-center wow bounceInUp" data-wow-delay="0.1s">
            <small class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-primary rounded-pill px-4 py-1 mb-3">Thực đơn của chúng tôi</small>
            <h1 class="display-5 mb-5">Món ăn phổ biến nhất</h1>
        </div>
        <div class="tab-class text-center">
            <!-- Navigation Tabs -->
            <ul class="nav nav-pills d-inline-flex justify-content-center mb-5 wow bounceInUp" data-wow-delay="0.1s">
                <li class="nav-item p-2">
                    <a class="nav-link active d-flex py-2 mx-2 border border-primary bg-white rounded-pill"
                       data-bs-toggle="pill" href="#tab-6">
                        <span class="text-dark" style="width: 150px;">Đồ ăn nhanh</span>
                    </a>
                </li>
                <li class="nav-item p-2">
                    <a class="nav-link d-flex py-2 mx-2 border border-primary bg-white rounded-pill"
                       data-bs-toggle="pill" href="#tab-7">
                        <span class="text-dark" style="width: 150px;">Đồ uống</span>
                    </a>
                </li>
                <li class="nav-item p-2">
                    <a class="nav-link d-flex py-2 mx-2 border border-primary bg-white rounded-pill"
                       data-bs-toggle="pill" href="#tab-8">
                        <span class="text-dark" style="width: 150px;">Món chính</span>
                    </a>
                </li>
                <li class="nav-item p-2">
                    <a class="nav-link d-flex py-2 mx-2 border border-primary bg-white rounded-pill"
                       data-bs-toggle="pill" href="#tab-9">
                        <span class="text-dark" style="width: 150px;">Món tráng miệng</span>
                    </a>
                </li>
                <li class="nav-item p-2">
                    <a class="nav-link d-flex py-2 mx-2 border border-primary bg-white rounded-pill"
                       data-bs-toggle="pill" href="#tab-10">
                        <span class="text-dark" style="width: 150px;">Đồ ăn vặt</span>
                    </a>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content">
                <div id="tab-6" class="tab-pane fade show active p-0">
                    <div class="row g-4">
                        @await Component.InvokeAsync("Product", new { categoryId = "C001" })
                    </div>
                </div>
                <div id="tab-7" class="tab-pane fade p-0">
                    <div class="row g-4">
                        @await Component.InvokeAsync("Product", new { categoryId = "C002" })
                    </div>
                </div>
                <div id="tab-8" class="tab-pane fade p-0">
                    <div class="row g-4">
                        @await Component.InvokeAsync("Product", new { categoryId = "C003" })
                    </div>
                </div>
                <div id="tab-9" class="tab-pane fade p-0">
                    <div class="row g-4">
                        @await Component.InvokeAsync("Product", new { categoryId = "C004" })
                    </div>
                </div>
                <div id="tab-10" class="tab-pane fade p-0">
                    <div class="row g-4">
                        @await Component.InvokeAsync("Product", new { categoryId = "C005" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Menu End -->