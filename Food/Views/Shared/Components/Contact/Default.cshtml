@model IEnumerable<Food.Models.BContact>

@if (Model == null || !Model.Any())
{
    <p>No contacts available.</p>
}
else
{
    @foreach (var item in Model)
    {
        <div class="testimonial-item rounded bg-light mb-4">
            <div class="d-flex mb-3">
                <img src="~/img/testimonial-1.jpg" class="img-fluid rounded-circle flex-shrink-0" alt="@item.FullName" />
                <div class="position-absolute" style="top: 15px; right: 20px;">
                    <i class="fa fa-quote-right fa-2x"></i>
                </div>
                <div class="ps-3 my-auto">
                    <h4 class="mb-0">@item.FullName</h4>
                    <p class="m-0">@item.EmailAddress</p>
                </div>
            </div>
            <div class="testimonial-content">
                <div class="d-flex">
                    <i class="fas fa-star text-primary"></i>
                    <i class="fas fa-star text-primary"></i>
                    <i class="fas fa-star text-primary"></i>
                    <i class="fas fa-star text-primary"></i>
                    <i class="fas fa-star text-primary"></i>
                </div>
                <p class="fs-5 m-0 pt-3">@item.InquiryMessage</p>
            </div>
        </div>
    }
}
